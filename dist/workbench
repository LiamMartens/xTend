#!/usr/bin/env php
<?php
    /**
    * Contains the workbench
    * entry point
    */
    namespace Application;
    use xTend\Workbench;
    require(__DIR__.'/CLI/Workbench.php');

    //set http default ignore errors
    stream_context_set_default([
        'http' => [
            'ignore_errors' => true
        ]
    ]);
    //load configuration
    Workbench::configuration();
    Workbench::namespace(__NAMESPACE__);
    //Do checks + include App core file
    Workbench::start();
    // Start app and workbench
    Core\App::start(__DIR__, true);
    Core\FileHandler::system('Config.App.App.php')->include();
    Workbench::argv($argv);
    Workbench::commands();
    Core\App::run();
    Workbench::run();